<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviefilm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bai1Training"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".base.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".film.user.view.HistoryFilmActivity"/>
        <activity android:name=".film.home.detailFilm.watchfilm.view.WatchFilmActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            tools:targetApi="n" />
        <activity android:name=".film.home.detailFilm.view.DetailFilmActivity" />
        <activity
            android:name=".film.view.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".film.home.searchFilm.SearchFilmActivity" />
        <activity android:name=".film.home.allfilm.view.AllFilmActivity" />
        <activity android:name=".film.user.login.view.LoginActivity" />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

    </application>

</manifest>