<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moviefilm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_movie_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bai1Training"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".base.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".film.home.allfilm.view.HistoryFilmActivity"/>
        <activity android:name=".film.home.detailFilm.watchfilm.view.WatchFilmActivity" />
        <activity android:name=".film.home.detailFilm.view.DetailFilmActivity" />
        <activity
            android:name=".film.view.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".film.home.searchFilm.SearchFilmActivity" />
        <activity android:name=".film.home.allfilm.view.AllFilmActivity" />
        <activity android:name=".film.user.login.LoginActivity" />
    </application>

</manifest>