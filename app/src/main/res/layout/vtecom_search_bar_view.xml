<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vtecom_bg_search_box">

    <ImageView
        android:id="@+id/img_search_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:padding="7dp"
        android:src="@drawable/vtecom_ic_search" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_search_icon"
        android:layout_toRightOf="@+id/img_search_icon">

        <EditText
            android:id="@+id/edt_search_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="Tìm kiếm"
            android:imeOptions="actionSearch"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:paddingEnd="35dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_clear_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:src="@drawable/vtecom_ic_close_black"
            android:tint="@color/white" />
    </RelativeLayout>

</RelativeLayout>