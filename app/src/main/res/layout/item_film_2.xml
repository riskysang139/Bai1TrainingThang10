<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_film"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/maincolor">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_film"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        android:src="@color/main"
        app:riv_corner_radius="12dp" />

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:padding="40dp"
        android:src="@drawable/ic_play" />

    <TextView
        android:id="@+id/title_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_film"
        android:ellipsize="end"
        android:fontFamily="@font/pro_text_semibold"
        android:lines="2"
        android:maxLines="2"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_film"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/img_film"
        android:fontFamily="@font/pro_text"
        android:gravity="center_vertical"
        android:text="12/12/2021"
        android:textColor="@color/color_979797"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/txt_rate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date"
        android:layout_centerInParent="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/img_film"
        android:isIndicator="true"
        android:theme="@style/RatingBar" />


</RelativeLayout>